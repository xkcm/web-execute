{
  "compilerOptions": {
    "lib": ["es2015"],
    "target": "ES5",
    "allowJs": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "dist/",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist/**/*",
    "src/**/*.spec.ts"
  ]
}